<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IntecApp.Views.Tabbed.DiscoveryCardView"
             x:Name="discoveryCardView">
    <Grid 
        Padding="10"
        VerticalOptions="Center"
        RowDefinitions="Auto, Auto, Auto"
        ColumnDefinitions="*">

        <Image
            Grid.Column="0"
            Grid.Row="0"
            Grid.ColumnSpan="1"
            Source="{Binding Image}"
            Margin="20"
            />

        <Label
            Grid.Column="0"
            Grid.Row="1"
            Grid.ColumnSpan="1"
            HorizontalOptions="CenterAndExpand"
            TextColor="Black"
            FontAttributes="Bold"
            FontSize="Title"
            Text="{Binding Title}"
            />

        <Label 
            Grid.Column="0"
            Grid.Row="2"
            HorizontalOptions="CenterAndExpand"
            TextColor="Gray"
            FontSize="Subtitle"
            Text="{Binding Sub}"
            />

    </Grid>
    
   
</ContentView>